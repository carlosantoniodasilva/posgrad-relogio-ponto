<% content_for :title, 'Alterar departamento' -%>
<% content_for :actions do -%>
  <div class="btn-group">
    <%= link_to icon_tag('asterisk') << ' Ver', @department, class: 'btn btn-default' %>
    <%= link_to icon_tag('trash') << ' Remover', @department, class: 'btn btn-default', method: :delete, data: { confirm: 'Tem certeza?' } %>
    <%= link_to icon_tag('chevron-left') << ' Voltar', departments_path, class: 'btn btn-default' %>
  </div>
<% end %>

<%= render 'form' %>
