<% content_for :title, 'Alterar departamento' -%>
<% content_for :actions do -%>
  <div class="btn-group">
    <%= link_to 'Ver', @department, class: 'btn btn-default' %>
    <%= link_to 'Remover', @department, class: 'btn btn-default', method: :delete, data: { confirm: 'Tem certeza?' } %>
    <%= link_to 'Voltar', departments_path, class: 'btn btn-default pull-right' %>
  </div>
<% end %>

<%= render 'form' %>
