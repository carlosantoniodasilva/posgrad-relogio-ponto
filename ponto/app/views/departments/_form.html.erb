<%= form_for(@department) do |f| %>
  <%= render 'shared/form_errors', object: @department %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :leader_id %>
    <%= f.collection_select :leader_id, Employee.order(:name), :id, :name, { include_blank: true }, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary', data: { disable_with: 'Enviando...' } %>
  <%= link_to 'Cancelar', departments_path, class: 'btn btn-default' %>
<% end %>
