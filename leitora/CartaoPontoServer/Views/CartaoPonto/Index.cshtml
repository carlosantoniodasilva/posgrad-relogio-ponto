@model CartaoPontoServer.ViewsModel.CartaoPontoViewModel

@{
    ViewBag.Title = "Gerenciar Cartao Ponto Server";
}

<h2>Gerar Cartao Ponto</h2>


@using (Html.BeginForm("Create", "CartaoPonto"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Gerenciar Cartao Ponto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
